= form_tag evaluation_path(@evaluation), :method => :put, class: "form-horizontal" do
  .form-group
    %label.col-sm-2.control-label Term
    .col-sm-10
      %p.form-control-static= @evaluation.term
  .form-group
    %label.col-sm-2.control-label Subject
    .col-sm-10
      %p.form-control-static= @evaluation.subject
  .form-group
    %label.col-sm-2.control-label Course
    .col-sm-10
      %p.form-control-static= @evaluation.course
  .form-group
    %label.col-sm-2.control-label Section
    .col-sm-10
      %p.form-control-static= @evaluation.section
  .form-group
    %label.col-sm-2.control-label Instructor
    .col-sm-10
      %p.form-control-static= link_to @evaluation.instructor.name, instructor_path(id: @evaluation.instructor.id)
  .form-group
    %label{for: "evaluation_enrollment", class: "col-sm-2 control-label"} Enrollment
    .col-sm-10
      = text_field :evaluation, :enrollment, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = submit_tag 'Update Enrollment Info', class: 'btn btn-primary'
